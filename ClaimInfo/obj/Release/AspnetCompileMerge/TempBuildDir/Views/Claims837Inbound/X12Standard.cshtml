
@{
    ViewBag.Title = "X12Standard";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}



<div class="rightpart">
    <div class="dashBx">
        <div class="clearfix"></div>
        <h2>Trading Partners</h2><br />
        <button class="accordion active">Basic X12 Options</button>

        <div class="panel" style="display:block;">
            <br />
            <div class="dashfrm-L">
                <label class="lblTxt">Function Acknowledgment Options </label>
                @Html.DropDownList("Acknowledgment", new List<SelectListItem>
                       {
                           new SelectListItem{Text="Do Not Acknowledgment"},
                            new SelectListItem{Text=" Acknowledge Functional Groups"},
                             new SelectListItem{Text="Acknowledge Transaction Sets"},


                       }, "Select Acknowledgment", new { @class = "dashInp" })
            </div>
            <div class="dashfrm-M">
                <label class="lblTxt">Document Envelope Option</label>
                @Html.DropDownList("Document", new List<SelectListItem>
                        {
                            new SelectListItem{Text="Group By InterChange"},
                             new SelectListItem{Text="Group By Functional Group"},
                              new SelectListItem{Text="Group By Transaction Set"},

                        }, "Select Document", new { @class = "dashInp" })

            </div>
            <div class="dashfrm-M">
                <label class="lblTxt">Element Delimiter</label>
                @Html.DropDownList("Element", new List<SelectListItem>
                        {
                            new SelectListItem{Text="Star Delimited"},
                             new SelectListItem{Text="Comma Delimited"},
                              new SelectListItem{Text="Tab Delimited"},
                               new SelectListItem{Text="Bar(|) Delimited"},
                                new SelectListItem{Text="Other Characher"},

                        }, "Select Element", new { @class = "dashInp" })

            </div>
            <div class="dashfrm-R">
                <label class="lblTxt">Segment Termination Character</label>
                @Html.DropDownList("Segment", new List<SelectListItem>
                        {
                         new SelectListItem{Text="Single Quote"},
                            new SelectListItem{Text="Tilde(~)"},
                              new SelectListItem{Text="Other Characher"},
                        }, "Select Segment", new { @class = "dashInp" })

            </div>
            <div class="dashfrm-M">
                <label class="lblTxt">Filter Functional Acknowledgments</label>
                <input type="checkbox" style="margin-left:75px;" />

            </div>
            <div class="dashfrm-M">
                <label class="lblTxt">Reject Duplicate ISA</label>
                <input type="checkbox" style="margin-left:75px;" />

            </div>
            <div class="dashfrm-M">
                <label class="lblTxt">Validate Outbound Interchanges</label>
                <input type="checkbox" style="margin-left:75px;" />

            </div>
            <div class="dashfrm-R">
                <label class="lblTxt">Outbound Validation Option</label>
                @Html.DropDownList("Element", new List<SelectListItem>
                       {
                           new SelectListItem{Text="Filter Errored Documents"},


                       },  new { @class = "dashInp" })

            </div>
        </div>



        <button class="accordion">ISA Identification Options</button>

        <div class="panel">
            <br />
            <h1 style="font-size:14px;">Authorization Information (ISA01,ISA02)</h1>
            <hr />
            <br />
            <div class="dashfrm-L">
                <label class="lblTxt">Qualifier</label>
                @Html.DropDownList("Element", new List<SelectListItem>
                    {
                        new SelectListItem{Text="01-UCS Communication ID"},
                          new SelectListItem{Text="02-EDXCommunication ID"},
                           new SelectListItem{Text="03-Additional Data Information"},


                    },  new { @class = "dashInp" })




            </div>
            <div class="dashfrm-R" style="margin-right:500px;">
                <label class="lblTxt">ID</label>
                @Html.TextBox("InsuranceBalanceDue", "", new { @class = "dashInp", @onkeypress = "return OnlyLegalCharacters();" })


            </div>
            <br />
            <h1 style="font-size:14px;">Security Information (ISA03,ISA04)</h1>
            <hr />
            <br />
            <div class="dashfrm-L">
                <label class="lblTxt">Qualifier</label>

                @Html.DropDownList("Element", new List<SelectListItem>
                    {
                        new SelectListItem{Text=" 00-No Security Information Present"},
                          new SelectListItem{Text="  01-Password"},


                    },  new { @class = "dashInp" })

            </div>
            <div class="dashfrm-R" style="margin-right:500px;">
                <label class="lblTxt">ID</label>
                @Html.TextBox("InsuranceBalanceDue", "", new { @class = "dashInp", @onkeypress = "return OnlyLegalCharacters();" })

            </div>
            <h1 style="font-size:14px;">Interchange ID (ISA05/07,ISA06/08)</h1>
            <hr />
            <br />
            <div class="dashfrm-L">
                <label class="lblTxt">Qualifier</label>




                @Html.DropDownList("Element", new List<SelectListItem>
                 {
                     new SelectListItem{Text=" 01-Duns"},
                       new SelectListItem{Text=" 02-SCAC"},
                          new SelectListItem{Text=" 03-FMC"},
                       new SelectListItem{Text="04-IATA"},


                 },  new { @class = "dashInp" })
            </div>
            <div class="dashfrm-R" style="margin-right:500px;">
                <label class="lblTxt">ID</label>
                @Html.TextBox("InsuranceBalanceDue", "", new { @class = "dashInp", @onkeypress = "return OnlyLegalCharacters();" })

            </div>

        </div>
        <button class="accordion">ISA Version/Control Options</button>
        <div class="panel">
            <br />
            <div class="dashfrm-L">
                <label class="lblTxt">Interchange Standard ID (ISA11) </label>
                @Html.TextBox("InsuranceBalanceDue", "", new { @class = "dashInp", @onkeypress = "return OnlyLegalCharacters();" })
            </div>
            <div class="dashfrm-M">
                <label class="lblTxt">Interchange Version (ISA12)</label>
                @Html.TextBox("InsuranceBalanceDue", "", new { @class = "dashInp", @onkeypress = "return OnlyLegalCharacters();" })

            </div>
            <div class="dashfrm-M">
                <label class="lblTxt">Interchange Ack. Requested (ISA14)</label>
                <input type="checkbox" style="margin-left:75px;" />
            </div>
            <div class="dashfrm-R">
                <label class="lblTxt">Test Indicator (ISA15)</label>
                @Html.DropDownList("Segment", new List<SelectListItem>
                        {
                         new SelectListItem{Text="P-Production"},
                            new SelectListItem{Text="T-Test"},
                        },  new { @class = "dashInp" })

            </div>

            <div class="dashfrm-L" style="margin-right:500px;">
                <label class="lblTxt">Interchange Standard ID (ISA11) </label>
                @Html.TextBox("InsuranceBalanceDue", "", new { @class = "dashInp", @onkeypress = "return OnlyLegalCharacters();" })
            </div>
        </div>

        <button class="accordion">GS Version/Control Options</button>
        <div class="panel">
            <br />
            <div class="dashfrm-L">
                <label class="lblTxt">Application Code (GS02/03)</label>
                @Html.TextBox("InsuranceBalanceDue", "", new { @class = "dashInp", @onkeypress = "return OnlyLegalCharacters();" })
            </div>
            <div class="dashfrm-M">
                <label class="lblTxt">Responsible Agency Code (GS07)</label>

                @Html.DropDownList("Segment", new List<SelectListItem>
                        {
                         new SelectListItem{Text="T-Transportation Data Coordinating Committee"},
                            new SelectListItem{Text="X-Accredited Standards Commitess"},
                        },  new { @class = "dashInp" })
            </div>
            <div class="dashfrm-M">
                <label class="lblTxt">Interchange Ack. Requested (ISA14)</label>
                @Html.TextBox("InsuranceBalanceDue", "", new { @class = "dashInp", @onkeypress = "return OnlyLegalCharacters();" })
            </div>
          
        </div>





    </div>

    <style>

        main {
            /*max-width: 800px;*/
            padding: 5px;
            border: 1px solid rgba(0,0,0,.2);
            background: #fff;
            box-shadow: 0 1px 3px rgba(0,0,0,.1);
        }

        section {
            display: none;
            padding: 20px 0 0;
            border-top: 1px solid #abc;
        }
        /*Demographics*/
        .rbinput {
            display: none;
        }

        .rblable {
            display: inline-block;
            margin: 0 0 -1px;
            padding: 15px 25px;
            font-weight: 600;
            text-align: center;
            color: #abc;
            border: 1px solid transparent;
        }

            .rblable:before {
                font-family: -apple-system,BlinkMacSystemFont,segoe ui,Roboto,helvetica neue,Arial,sans-serif,apple color emoji,segoe ui emoji,segoe ui symbol,noto color emoji;
                font-weight: bold;
                margin-right: 10px;
            }


            .rblable:hover {
                color: #789;
                cursor: pointer;
            }



        /*Insurance*/
        .rbinputIns {
            display: none;
        }

        .rblableIns {
            display: inline-block;
            margin: 0 0 -1px;
            padding: 15px 25px;
            font-weight: 600;
            text-align: center;
            color: #abc;
            border: 1px solid transparent;
        }

            .rblableIns:before {
                font-family: -apple-system,BlinkMacSystemFont,segoe ui,Roboto,helvetica neue,Arial,sans-serif,apple color emoji,segoe ui emoji,segoe ui symbol,noto color emoji;
                font-weight: bold;
                margin-right: 10px;
            }


            .rblableIns:hover {
                color: #789;
                cursor: pointer;
            }

        input:checked + label {
            color: #0af;
            border: 1px solid #abc;
            border-top: 3px solid #0af;
            border-bottom: 1px solid #fff;
        }

        #Demotab1:checked ~ #content1,
        #Demotab2:checked ~ #content2,
        #Demotab3:checked ~ #content3,
        #Demotab4:checked ~ #content4,
        #Demotab5:checked ~ #content5,
        #Demotab6:checked ~ #content6,
        #Demotab7:checked ~ #content7,
        #Instab1:checked ~ #content8,
        #Instab2:checked ~ #content9,
        #Instab3:checked ~ #content10,
        #Instab4:checked ~ #content11 {
            display: block;
        }

        @@media screen and (max-width: 800px) {
            label {
                font-size: 0;
            }

                label:before {
                    margin: 0;
                    font-size: 18px;
                }
        }

        @@media screen and (max-width: 500px) {
            label {
                padding: 15px;
            }
        }
    </style>

    <style>
        .accordion {
            font-family: -apple-system,BlinkMacSystemFont,segoe ui,Roboto,helvetica neue,Arial,sans-serif,apple color emoji,segoe ui emoji,segoe ui symbol,noto color emoji;
            background-color: #eee;
            color: #444;
            cursor: pointer;
            padding: 5px;
            width: 100%;
            border: none;
            text-align: left;
            outline: none;
            font-size: 15px;
            transition: 0.4s;
            margin-top: 10px;
        }

            .active, .accordion:hover {
                background-color: #6AA2B8;
            }

        .panel {
            font-family: -apple-system,BlinkMacSystemFont,segoe ui,Roboto,helvetica neue,Arial,sans-serif,apple color emoji,segoe ui emoji,segoe ui symbol,noto color emoji;
            padding: 0 18px;
            display: none;
            background-color: white;
            overflow: hidden;
            border: 1px solid #6AA2B8;
        }
    </style>
    <script>
        var acc = document.getElementsByClassName("accordion");
        var i;

        for (i = 0; i < acc.length; i++) {
            acc[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var panel = this.nextElementSibling;
                if (panel.style.display === "block") {
                    panel.style.display = "none";
                } else {
                    panel.style.display = "block";
                }
            });
        }

        function openCity(cityName) {
            var i;
            var x = document.getElementsByClassName("city");
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            document.getElementById(cityName).style.display = "block";
        }
    </script>





